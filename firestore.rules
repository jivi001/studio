rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for the 'users' collection
    match /users/{userId} {
      // Any authenticated user can create a user document.
      // This is necessary for the 'Create Demo Accounts' feature.
      allow create: if request.auth != null;

      // Only the authenticated user can read or update their own document.
      allow read, update: if request.auth != null && request.auth.uid == userId;
      
      // No one can delete user documents.
      allow delete: if false;
    }
  }
}
